{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "../dist/api",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"],
      "@/lib/*": ["../lib/*"],
      "@/api/*": ["./*"]
    },
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 