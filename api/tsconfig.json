{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": ".",
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "../src/**/*",
    "../scripts/**/*",
    "../node_modules/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 