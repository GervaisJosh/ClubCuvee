{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "outDir": "../dist/api",
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "@/*": ["../*"],
      "@/lib/*": ["../lib/*"],
      "@/api/*": ["./*"]
    },
    "types": ["node", "vite/client"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "./**/*.ts",
    "../src/utils/priceUtils.ts",
    "../src/utils/recommendation.ts",
    "../src/lib/services/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 