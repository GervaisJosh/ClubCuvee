{
  "version": 2,
  "buildCommand": "npm run build:all",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "dist/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "ignoreCommand": "echo 'Ignoring source files'"
}
