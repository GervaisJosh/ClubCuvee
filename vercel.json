{
  "version": 2,
  "builds": [
    { "src": "src/server/index.js", "use": "@vercel/node" },
    { "src": "vite.config.ts", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/server/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "static-build": {
    "distDir": "dist"
  }
}
